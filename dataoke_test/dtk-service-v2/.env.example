# 大淘客服务端 V2.0 环境配置文件模板
# 复制此文件为 .env 并修改相应配置

# 应用配置
APP_NAME="大淘客服务端 V2.0"
APP_VERSION="2.0.0"
APP_DEBUG=true
APP_TIMEZONE="Asia/Shanghai"

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=dtk_service_v2
DB_USER=root
DB_PASS=your_password
DB_CHARSET=utf8mb4
DB_PREFIX=dtk_

# 读库配置（可选，用于读写分离）
DB_READ_HOST=localhost
DB_READ_PORT=3306
DB_READ_NAME=dtk_service_v2
DB_READ_USER=root
DB_READ_PASS=your_password

# 大淘客平台配置
# 淘宝/天猫
TAOBAO_ENABLED=true
TAOBAO_APP_KEY=your_app_key
TAOBAO_APP_SECRET=your_app_secret
TAOBAO_PID=your_pid
TAOBAO_VERSION=v1.2.4

# 京东
JD_ENABLED=false
JD_APP_KEY=
JD_APP_SECRET=
JD_PID=
JD_VERSION=v1.0.0

# 拼多多
PDD_ENABLED=false
PDD_APP_KEY=
PDD_APP_SECRET=
PDD_PID=
PDD_VERSION=v1.0.0

# 缓存配置
CACHE_DRIVER=file
CACHE_PREFIX=dtk_v2_
CACHE_EXPIRE_GOODS_LIST=1800
CACHE_EXPIRE_GOODS_DETAIL=3600
CACHE_EXPIRE_CATEGORY=7200
CACHE_EXPIRE_PROMOTION=86400

# 日志配置
LOG_LEVEL=info
LOG_MAX_FILES=30
LOG_MAX_SIZE=10485760

# API配置
API_DEFAULT_PAGE_SIZE=20
API_MAX_PAGE_SIZE=200
API_TIMEOUT=30
API_RATE_LIMIT=1000

# 同步配置
SYNC_ENABLED=true
SYNC_BATCH_SIZE=100
SYNC_MAX_PAGES=50
SYNC_SLEEP_TIME=1
SYNC_MAX_EXECUTION_TIME=3600

# CORS配置
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="Content-Type,Authorization,X-Requested-With"
CORS_ALLOW_CREDENTIALS=true
